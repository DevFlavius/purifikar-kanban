{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (ts-node)",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/backend/src/index.ts"
      ],
      "cwd": "${workspaceFolder}/backend",
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}