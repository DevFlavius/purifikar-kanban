{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (ts-node)",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/backend/src/index.ts"
      ],
      "cwd": "${workspaceFolder}/backend",
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/**/*.ts"],
      "skipFiles": ["<node_internals>/**"],
      "restart": true
    }
  ]
}